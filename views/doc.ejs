<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Documents | MMao API</title>
    <link rel="stylesheet" href="../home.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
</head>
<body>
    <nav>
        <div class="left">
            <span class="material-symbols-outlined menubtn">menu</span>
            <a href="../../" class="logo">MMao API</a>
        </div>
        <div class="right">
            <div class="search">
                <input type="text" placeholder="Search API">
                <button>Search</button>
            </div>
            <a href="" class="searchshow"><span class="material-symbols-outlined">search</span></a>
            <a href=""><span class="material-symbols-outlined">qr_code_scanner</span></a>
            <a href=""><span class="material-symbols-outlined">settings</span></a>
        </div>
    </nav>
    <div class="searchdiv">
        <div class="search searchbar">
            <input type="text" placeholder="Search API">
            <button>Search</button>
        </div>
    </div>
    <div class="div">
        <div class="menu">
            <span class="material-symbols-outlined close">close</span>
            <h3>Category</h3>
            <a href=""><p>System</p><span class="material-symbols-outlined">arrow_forward_ios</span></a>
            <a href=""><p>Public</p><span class="material-symbols-outlined">arrow_forward_ios</span></a>
            <a href=""><p>Network</p><span class="material-symbols-outlined">arrow_forward_ios</span></a>
            <a href=""><p>Generate</p><span class="material-symbols-outlined">arrow_forward_ios</span></a>
        </div>
        <div class="doc">
            <div class="head">
                <div class="left">
                    <h1 class="title"><%=all.name%></h1>
                    <div class="d"><span class="material-symbols-outlined">dns</span><p>Category : <%=all.type%></p></div>
                </div>
                <div class="right">
                    <a href="<%=all.api%>" class="visit">Visit API</a>
                    <a href="javascript:copy('<%=all.api%>')" title="Copy this API" class="copy"><span class="material-symbols-outlined">content_copy</span></a>
                </div>
            </div>
            <div class="content">
                <p><%=all.des%></p>
                <div class="api">
                    <p>API</p>
                    <p><a href="<%=all.api%>"><%=all.api%></a></p>
                </div>
                <h3>API response</h3>
                <div class="example">
                    one
                </div>
            </div>
        </div>
    </div>
    <div class="toast"></div>
    <script>
        let api = '<%=all.api%>';
        function copy(data){
            var inp = document.createElement('input');
            inp.value = data;
            document.body.append(inp);
            inp.select();
            document.execCommand('copy');
            inp.remove();
            toast("API was copied");
        }
        function toast(text){
            let tdiv = document.querySelector(".toast");
            tdiv.innerHTML = data;
            tdiv.style.bottom = 0;
            setTimeout(()=>{
                tdiv.style.bottom = '-10vh';
                tdiv.textContent = '';
            },3242)
        }
        const menu = document.querySelector(".menu");
        const menubtn = document.querySelector(".menubtn");
        const menuclose = document.querySelector(".menu .close");

        menubtn.onclick=()=>{
            menu.style.left = '0'
        }
        menuclose.onclick=()=>{
            menu.style.left = '-369px'
        }
        fetch(api).then(re=>re.json()).then(g=>{document.querySelector(".example").innerHTML = g})
    </script>
</body>
</html>